# Server configuration
PORT=3000
HOST=localhost

# Scraper configuration
TFT_PATCH_VERSION=current
TFT_RANK_FILTER=Diamond+
MAX_COMPOSITIONS=20
REQUEST_DELAY=2000
MAX_RETRIES=3

# Data storage configuration
DATA_DIR=./data
MAX_BACKUPS=5

# Scheduler configuration
SCHEDULER_ENABLED=true
CRON_EXPRESSION=0 0 * * *
TIMEZONE=UTC

# Logging configuration
LOG_LEVEL=info
LOG_FILE=./logs/scraper.log
